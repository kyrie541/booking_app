<% include ../partials/header %> 

<h4>Badminton</h4>
<table>
  <tr>
    <th></th>
    <th>Customer Name</th>
    <th>Court Number</th>
    <th>Start Time</th> 
    <th>End Time</th>
    <th>Duration(hour)</th>
    <th>Revenue</th>
  </tr>
  <% bookings.forEach(function(booking){ %>
    <% if(booking.type=="badminton"){ %>
      <tr bgcolor="#f7fdff">
        <td class="numberOfBadminton"></td>
        <td><a href="/bookings/<%= booking._id %>"><%= booking.name %></a></td> 
        <td><%= booking.courtNum.split(",")[0] %></td>
        <td><%= booking.startTime.split(",")[0] %></td>
        <td><%= booking.endTime.split(",")[0] %></td>
        <td>(developing)</td>
        <td>RM <%= booking.price %></td>
      </tr>
      <% for(var i=1; i<booking.courtNum.split(",").length;i++){ %>
        <% if(booking.courtNum.split(",").length>i){%>
        <tr>
          <td></td>
          <td></td> 
          <td><%= booking.courtNum.split(",")[i] %></td>
          <td><%= booking.startTime.split(",")[i] %></td>
          <td><%= booking.endTime.split(",")[i] %></td>
          <td></td>
          <td></td>
        </tr>
        <% } %>
      <% } %>  
    <% } %>
    
  <% }); %>
  
</table>
<br>
<h4>Futsal</h4>
<table>
  <tr>
    <th></th>
    <th>Customer Name</th>
    <th>Court Number</th>
    <th>Start Time</th> 
    <th>End Time</th>
    <th>Duration(hour)</th>
    <th>Revenue</th>
  </tr>
  <% bookings.forEach(function(booking){ %>
    <% if(booking.type=="futsal"){ %>
        <tr bgcolor="#f7fdff">
          <td class="numberOfFutsal"></td>
          <td><a href="/bookings/<%= booking._id %>"><%= booking.name %></a></td> 
          <td><%= booking.courtNum.split(",")[0] %></td>
          <td><%= booking.startTime.split(",")[0] %></td>
          <td><%= booking.endTime.split(",")[0] %></td>
          <td>(developing)</td>
          <td>RM <%= booking.price %></td>
        </tr>
        <% for(var i=1; i<booking.courtNum.split(",").length;i++){ %>
          <% if(booking.courtNum.split(",").length>i){%>
          <tr>
            <td></td>
            <td></td> 
            <td><%= booking.courtNum.split(",")[i] %></td>
            <td><%= booking.startTime.split(",")[i] %></td>
            <td><%= booking.endTime.split(",")[i] %></td>
            <td></td>
            <td></td>
          </tr>
          <% } %>
        <% } %>
      <% } %>
  <% }); %>
  
</table>
<br>
<script>
  var badminton_number = document.getElementsByClassName("numberOfBadminton");
  var futsal_number = document.getElementsByClassName("numberOfFutsal");
  
  for(var i=0; i<badminton_number.length; i++){
    badminton_number[i].innerHTML=i+1;
  }
  
  for(var ia=0; ia<futsal_number.length; ia++){
    futsal_number[ia].innerHTML= ia+1;
  }
  
  
  
</script>

<script type="text/javascript" src="/javascript/duration.js"></script>

<% include ../partials/footer %> 